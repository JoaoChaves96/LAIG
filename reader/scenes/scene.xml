<dsx>

    <globals background="0 1 0 1" drawmode="fill" shading="gouraud" cullface="none" cullorder="CCW" />

	<list>
		<elem id="rect1" coords="0 0 1" />
	</list>

    <illumination>

        <ambient r="0.5" g="0.5" b="0.5" a="0.5" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />

    </illumination>

    <primitives>

        <primitive id="rect1">
            <rectangle x1="0" y1="0" x2="5" y2="5" />
        </primitive>

    </primitives>



    <components>

        <component id="cube">

            <transformation>

                <!--transformationref id="transf1" /-->

            </transformation>

            <!--materials>
                <material id="ss" />
            </materials-->

            <children>
                <componentref id="face1" />
                <componentref id="face2" />
                <componentref id="face3" />
                <componentref id="face4" />
                <componentref id="top" />
                <componentref id="bottom" />
            </children>

        </component>

        <component id="face1">

          <transformations>
              <translate x="0.5" y="0" z="0.5" />
              <rotate axis="z" angle="90" />
          </transformations>

          <children>
            <primitiveref id="rect1"/>
          </children>

        </component>

        <component id="face2">

          <transformations>
              <rotation axis="x" angle="90" />
              <translate x="0.5" y="0.5" z="1" />
          </transformations>

          <children>
            <primitiveref id="rect1"/>
          </children>

        </component>

        <component id="face3">

          <transformations>
            <rotation axis="z" angle="-90" />
            <translate x="1" y="0.5" z="0.5" />
          </transformations>

          <children>
            <primitiveref id="rect1"/>
          </children>

        </component>

        <component id="face4">

          <transformations>
            <translate x="0.5" y="0" z="0.5" />
            <rotate axis="x" angle="90" />
          </transformations>

          <children>
            <primitiveref id="rect1"/>
          </children>

        </component>

        <component id="top">

          <transformations>
              <translate x="0.5" y="1" z="0.5" />
          </transformations>

          <children>
            <primitiveref id="rect1"/>
          </children>

        </component>

        <component id="bottom">

          <transformations>
              <rotate axis="x" angle="180" />
              <translate x="0.5" y="0" z="0.5" />
          </transformations>

          <children>
            <primitiveref id="rect1"/>
          </children>

        </component>

    </components>

</dsx>
