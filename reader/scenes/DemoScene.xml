      <diffuse r="1" g="1" b="1" a="1" />
      <specular r="0.2" g="0.2" b="0.2" a="1" />
      <shininess value="1" />
    </material>

    <material id="matA">
      <emission r="0.2" g="0.2" b="0.2" a="0.2" />
